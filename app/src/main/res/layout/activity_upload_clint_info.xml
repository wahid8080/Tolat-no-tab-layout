<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".UploadClintInfo">

    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="Clint Information"
        android:textSize="24dp" />

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        app:cardBackgroundColor="#E2E2E2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/uploadProfileImage"
                    android:onClick="uploadProfileImage"
                    android:src="@drawable/blank_profile"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />

                <TextView
                    android:layout_marginBottom="20dp"
                    android:textSize="17dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Profile Image"/>

                <TextView
                    android:textColor="#555555"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="serif"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="USER NAME"
                    android:textSize="16dp" />

                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/userNameId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_fild_background"
                    android:textColor="#555555" />

                <TextView
                    android:textColor="#555555"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="PHONE NUMBER"
                    android:gravity="center_vertical"
                    android:fontFamily="serif"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:inputType="number"
                    android:id="@+id/phoneNumberId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_fild_background"
                    android:textColor="#555555" />

                <TextView
                    android:textColor="#555555"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="AREA / THANA"
                    android:gravity="center_vertical"
                    android:fontFamily="serif"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:inputType="text"
                    android:id="@+id/ariaThanaId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_fild_background"
                    android:textColor="#555555" />

                <TextView
                    android:textColor="#555555"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="ROAD NO / NAME"
                    android:gravity="center_vertical"
                    android:fontFamily="serif"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:inputType="text"
                    android:id="@+id/RoadNoId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_fild_background"
                    android:textColor="#555555" />

                <TextView
                    android:textColor="#555555"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="HOUSE NO / NAME"
                    android:gravity="center_vertical"
                    android:fontFamily="serif"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:inputType="text"
                    android:id="@+id/houseId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_fild_background"
                    android:textColor="#555555" />

                <Button
                    android:id="@+id/buttonClintUpInfo"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="50dp"
                    android:enabled="false"
                    android:onClick="dataSubmit"
                    android:text="Submit"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp" />
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</LinearLayout>